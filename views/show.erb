<% if logged_in? %>
<p>logged in: <%= current_user.email %></p>
<% end %>
<div class="emo-page">


  <% @leaders.each do |leader| %>
  <h1>
    <%= leader.name %>
  </h1>
  <p>

    <% if Vote.find_by(leader_id: leader.id, user_id: current_user.id)%>
        <img id="h-emo" class = "clicked-already" src="download.jpeg">
        <img id="a-emo" class = "clicked-already" src="angry-emo.jpeg">
    <% else %>
    <a href="/votes?emoji_value=happy&leader_id=<%= leader.id %>&emo_value=1"><img id="h-emo" class = "clicked" src="download.jpeg"></a>
    <a href="/votes?emoji_value=angry&leader_id=<%= leader.id %>&emo_value=-1"><img id="a-emo" class = "clicked" src="angry-emo.jpeg"></a>


    <% end %>
  </p>
  <% end %>
</div>
